<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="7dp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
       android:src="@drawable/qsolve" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Verification"
        android:layout_gravity="center"
        android:textSize="27sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_gravity="center"
        android:text="Enter the 4 digit OTP that was sent to"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="anne.wallace23@example.com"
        android:layout_gravity="center"
        android:textSize="17sp"
        android:textColor="#3AB63F" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        android:text="Enter your OTP code here"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/otp_digit_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:background="@android:drawable/editbox_background_normal" />

        <EditText
            android:id="@+id/otp_digit_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:background="@android:drawable/editbox_background_normal" />

        <EditText
            android:id="@+id/otp_digit_3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:background="@android:drawable/editbox_background_normal" />

        <EditText
            android:id="@+id/otp_digit_4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:background="@android:drawable/editbox_background_normal" />
    </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_gravity="center"
      android:orientation="horizontal">

      <TextView
          android:id="@+id/resend_code"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="i didn't receive a code!"
          android:fontFamily="serif"
          android:textColor="@color/black"
          android:textSize="15sp" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#EA0A0A"
          android:textStyle="bold"
         android:layout_marginLeft="5dp"
          android:text="Resend Code"/>



  </LinearLayout>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="200dp"
        android:layout_height="58dp"
        android:layout_marginTop="38dp"
        android:text="CONTINUE"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="16dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white" />


</LinearLayout>